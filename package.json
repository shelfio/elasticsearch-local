{
  "name": "@shelf/elasticsearch-local",
  "version": "0.2.0",
  "description": "Run any version of ElasticSearch locally",
  "keywords": [
    "elastic",
    "elastic local",
    "elasticsearch",
    "elasticsearch local",
    "es",
    "es local",
    "local"
  ],
  "homepage": "https://github.com/shelfio/elasticsearch-local#readme",
  "bugs": {
    "url": "https://github.com/shelfio/elasticsearch-local/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shelfio/elasticsearch-local.git"
  },
  "license": "MIT",
  "author": "Vitalii Sikora",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "rm -rf lib/ && yarn build:types && babel src --out-dir lib --ignore '**/*.test.ts,**/*.mock.ts' --extensions '.ts'",
    "build:types": "tsc -p tsconfig.types.json",
    "lint": "eslint . --fix --ext .js,.json,.ts --quiet",
    "lint:ci": "eslint . --ext .js,.json,.ts --quiet",
    "prepack": "npm run build",
    "test": "jest src --runInBand",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts,*.json": [
      "eslint --fix",
      "git add"
    ],
    "*.{html,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "cwd": "0.10.0",
    "debug": "4.1.1",
    "download-tarball": "2.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.6.2",
    "@babel/core": "7.6.2",
    "@babel/preset-env": "7.6.2",
    "@babel/preset-typescript": "7.6.0",
    "@shelf/eslint-config": "0.7.0",
    "@types/cwd": "0.10.0",
    "@types/debug": "4.1.5",
    "@types/jest": "24.0.18",
    "babel-jest": "24.9.0",
    "eslint": "6.5.1",
    "husky": "3.0.8",
    "jest": "24.9.0",
    "lint-staged": "9.4.1",
    "prettier": "1.18.2",
    "typescript": "3.6.3"
  },
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "access": "public"
  }
}
